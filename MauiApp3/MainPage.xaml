<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage">

    <VerticalStackLayout Spacing="10" Padding="10">
        
        <Label x:Name="DisplayLabel"
               Text="0"
               FontSize="32"
               HorizontalOptions="End"
               VerticalOptions="Center"
               BackgroundColor="Yellow"
               TextColor="DarkBlue"
               Padding="15" />

        
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*,*">
            <Button Text="C" Grid.Row="0" Grid.Column="0" Clicked="OnClearClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="±" Grid.Row="0" Grid.Column="1" Clicked="OnToggleSignClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="%" Grid.Row="0" Grid.Column="2" Clicked="OnPercentClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="÷" Grid.Row="0" Grid.Column="3" Clicked="OnOperatorClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>

            <Button Text="7" Grid.Row="1" Grid.Column="0" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="8" Grid.Row="1" Grid.Column="1" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="9" Grid.Row="1" Grid.Column="2" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="×" Grid.Row="1" Grid.Column="3" Clicked="OnOperatorClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>

            <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="−" Grid.Row="2" Grid.Column="3" Clicked="OnOperatorClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>

            <Button Text="1" Grid.Row="3" Grid.Column="0" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="2" Grid.Row="3" Grid.Column="1" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="3" Grid.Row="3" Grid.Column="2" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="+" Grid.Row="3" Grid.Column="3" Clicked="OnOperatorClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>

            <Button Text="0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Clicked="OnNumberClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
            <Button Text="=" Grid.Row="4" Grid.Column="2" Clicked="OnEqualsClicked" BackgroundColor="Yellow" TextColor="DarkBlue"/>
        </Grid>
    </VerticalStackLayout>


</ContentPage>
