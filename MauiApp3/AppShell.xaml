<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    Title="MauiApp3">

    <FlyoutItem Title="Standart Hesap Makinesi" Icon="calculator.png">
        <ShellContent
            Title="Standart"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Bilimsel Hesap Makinesi" Icon="scientific.png">
        <ShellContent
            Title="Bilimsel"
            ContentTemplate="{DataTemplate local:NewPage1}"
            Route="Bilimsel" />
    </FlyoutItem>
</Shell>